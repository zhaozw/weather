<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/background_window</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="@android:attr/actionBarSize">40px</item>  
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@drawable/ic_launcher_actionbar</item>
        <item name="android:background">#67acfa</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="current_temp">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">130sp</item>
    </style>
    
    <style name="font_white_12">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>